# ==== App ====
APP_ENV=dev
APP_SECRET=change_me
API_PORT=8000
CORS_ORIGINS=http://localhost:5173

# ==== Database (overridden in compose) ====
# DATABASE_URL=postgresql+psycopg2://phelia:phelia@db:5432/phelia

REDIS_URL=redis://redis:6379/

# ==== Celery ====
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ==== qBittorrent ====
QB_URL=http://qbittorrent:8080
# Credentials must match the qBittorrent Web UI login
QB_USER=admin
QB_PASS=adminadmin

# ==== Save paths (whitelist) ====
ALLOWED_SAVE_DIRS=/downloads,/music
DEFAULT_SAVE_DIR=/downloads

# ==== Gunicorn (optional) ====
GUNICORN_WORKERS=2
GUNICORN_THREADS=4
GUNICORN_TIMEOUT=120

