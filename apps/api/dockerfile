FROM python:3.12-slim

ENV POETRY_VIRTUALENVS_CREATE=false \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

COPY pyproject.toml /app/
RUN pip install --no-cache-dir -U pip && \
    pip install --no-cache-dir -r <(python - <<'PY'
from pathlib import Path
import tomllib
p=tomllib.loads(Path('pyproject.toml').read_text())
reqs=p['project']['dependencies']
print('\n'.join(reqs))
PY
)

COPY app /app/app

EXPOSE 8000
CMD ["bash", "-lc", "uvicorn app.main:app --host ${API_HOST:-0.0.0.0} --port ${API_PORT:-8000}"]
